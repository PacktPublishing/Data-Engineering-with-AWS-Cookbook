%%configure
{
    "enableDataQualityResultsPublishing": false
}
%idle_timeout 1000
%glue_version 4.0
%worker_type G.1X
%number_of_workers 2

import sys
from awsglue.transforms import *
from awsglue.utils import getResolvedOptions
from pyspark.context import SparkContext
from awsglue.context import GlueContext
from awsglue.job import Job
from awsgluedq.transforms import *
from awsgluedq.utils import *
from awsglue.dynamicframe import DynamicFrame

#Create Glue context
sc = SparkContext.getOrCreate()
glueContext = GlueContext(sc)
spark = glueContext.spark_session
job = Job(glueContext)


# Script generated for node main dataframe
df_main = glueContext.create_dynamic_frame.from_options(
    connection_type="s3",
    connection_options={
        "paths": ["s3://sample-test-wf09/star_wars_characters.csv"],
        "recurse": True,
    },
    format="csv",
    transformation_ctx="main",
)
)
# Script generated for node reference
df_reference = glueContext.create_dynamic_frame.from_options(
    connection_type="s3",
    connection_options={
        "paths": ["s3://sample-test-wf09/star_wars_characters.csv"],
        "recurse": True,
    },
    format="csv",
    transformation_ctx="reference",
)

EvaluateDataQualityProcessRows_nodeoutput_ruleset = """
    Rules = [RowCount = 42,
             ReferentialIntegrity "planet" "planet.homeworldname" = 1, 
             ReferentialIntegrity " species_catagory" "species_catagory. speciestype" = 1]
"""

EvaluateDataQuality_additional_sources = {
    "planet": df_weapon,
    "species_catagory": df_species_catagory
}
