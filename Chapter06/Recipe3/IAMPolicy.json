{
   "Version":"2012-10-17",
   "Statement":[
      {
         "Sid":"AllowLambdaTagging",
         "Effect":"Allow",
         "Action":[
            "lambda:TagResource"
         ],
         "Resource":"*"
      },
      {
         "Sid":"AllowEC2Tagging",
         "Effect":"Allow",
         "Action":[
            "ec2:CreateTags",
            "ec2:DescribeInstances",
            "ec2:DescribeVolumes"
         ],
         "Resource":"*"
      },
      {
         "Sid":"AllowS3Tagging",
         "Effect":"Allow",
         "Action":[
            "s3:GetBucketTagging",
            "s3:PutBucketTagging"
         ],
         "Resource":"arn:aws:s3:::*"
      },
      {
         "Sid":"AllowCloudTrailLookup",
         "Effect":"Allow",
         "Action":[
            "cloudtrail:LookupEvents"
         ],
         "Resource":"*"
      }
   ]
}